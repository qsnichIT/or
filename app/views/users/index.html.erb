<% title "Manage User" %>

<table style="border:1px solid;border-collapse:collapse;" border=1 width="80%" align="center">
  <tr>
    <th style="width:20%">Username</th>
    <th style="width:20%">ชื่อ</th>
    <th style="width:15%">นามสกุล</th>
    <th style="width:15%">ห้อง</th>
    <th style="width:10%">Admin</th>
    <th  style="width:20%">เครื่องมือ</th>
  </tr>

<% @users.each do |u| %>
  <tr>
    <td><%= u.username %></td>
    <td><%= u.fname %></td>
    <td><%= u.lname %></td>
    <td><%= begin u.room.name rescue "" end %></td>
    <td><%= status_admin u.admin %></td>
    <td><%= link_to "แก้ไข", edit_current_user_path(u)%></td>
  </tr>
<% end %>


</table>


